{
  "compilerOptions": {
    "target": "ES2020", // ou uma versão compatível com seu Node.js
    "module": "commonjs", // sistema de módulos do Node.js
    "moduleResolution": "node",
    "lib": [
      "ESNext"
    ], // bibliotecas padrão
    "outDir": "./dist", // diretório de saída para arquivos compilados
    "strict": true, // habilita verificações estritas de tipo
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ] // inclui tipos do Node.js
  },
  "include": [
    "src/**/*"
  ] // especifica os arquivos a serem incluídos na compilação
}